section.catalog-section
    .container.catalog-section__container
        aside.catalog-section__sidebar
            include ./includes/_filter.pug

        article.catalog-section__article
            header.catalog-section__header
                h1.catalog-section__title Стартові набори

                .catalog-section__controls
                    button.button.catalog-section__filter-button(type="button" data-filter-toggle) Фільтр
                        svg.button__icon(width="22" height="20")
                            use(xlink:href="img/sprite.svg#filter")
                    
                    button.button.catalog-section__sort-button(type="button" data-trigger="sort-form" aria-expanded="false")
                        svg.button__icon(width="22" height="20")
                            use(xlink:href="img/sprite.svg#sort")

                form#sort-form.sort-form(aria-hidden="true")
                    .sort-form__group
                        label.sort-form__label(for="viewSelect") Показувати
                        
                        select#viewSelect.select.sort-form__select(name="viewSelect" aria-label="Select" required)
                            option(value="25") 25
                            option(value="50") 50
                            option(value="100") 100
                            
                    .sort-form__group
                        label.sort-form__label(for="sortSelect") Сортування

                        select#sortSelect.select.sort-form__select(name="sortSelect" aria-label="Select" required)
                            option(value="1") За замовчуванням
                            option(value="2") По зростанню ціни
                            option(value="3") По спаданню ціни

