section.cabinet-section
    .container.cabinet-section__container
        aside.cabinet-section__sidebar
            include ./includes/_cabinet-menu.pug

        article.cabinet-section__article
            header.cabinet-section__header
                h1.cabinet-section__title Мій вибір

                .cabinet-section__count Загальна кількість товарів 
                    span.ruby-color 4

            .cabinet-section__actions
                .cabinet-section__control.cabinet-section__control--hidden-md
                    button.button.button--outline.cabinet-section__control-button(type="button") Перенести у кошик
                    button.button.button--outline.cabinet-section__control-button(type="button") Видалити
                
                form.cabinet-section__sort
                    .cabinet-section__sort-group
                        label.cabinet-section__sort-label(for="sortSelect") Сортування

                        select#sortSelect.select.cabinet-section__sort-select(name="sortSelect" aria-label="Select" required)
                            option(value="1") За замовчуванням
                            option(value="2") По зростанню ціни
                            option(value="3") По спаданню ціни
            
            ul.cabinet-section__products
                li.cabinet-section__products-item
                    .product-controls
                        .checkbox.product-controls__checkbox
                            input.checkbox__input#productCheckbox-1(type="checkbox" name="productCheckbox-1" value="true" aria-label="Choose item" checked)
                            label.checkbox__label(for="productCheckbox-1")
                        
                        button.product-controls__delete-button(type="button" aria-label="Delete")
                            svg(width="18" height="19")
                                use(xlink:href="img/sprite.svg#delete")
                    
                    article.product-card
                        a.product-card__link(href="#") 
                            picture.product-card__picture
                                img.product-card__img(src="img/product-img-1.webp" srcset="img/product-img-1@2x.webp 2x" loading="lazy" width="286" height="286" alt="alt")
                            
                            .product-card__group
                                .product-card__number N16001600
                                .product-card__status HIT

                            h3.product-card__title Стартовий набір для манікюру №1

                            .product-card__feedback
                                .rating(data-rating="4")
                                    .rating__item
                                    .rating__item
                                    .rating__item
                                    .rating__item
                                    .rating__item
                                span 12

                            .product-card__price
                                span.new-price 1600 ₴
                                span.old-price 1890 ₴
                        
                        .product-card__size
                            select.select.product-card__select(name="sizeSelect" aria-label="Select")
                                option(value="3") 3m
                                option(value="4") 4m
                                option(value="5") 5m
                        
                        .product-card__buttons
                            button.button.product-card__buy-button(type="button") Купити
                            button.button.button--ruby.product-card__wish-button(type="button" aria-label="Add to wishlist")
                                svg.button__icon(width="26" height="23")
                                    use(xlink:href="img/sprite.svg#heart")

